<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1D1B41">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:clipToOutline="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fondo_redondo_avatar"
            android:clipToOutline="true"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/usuario"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Volver"
            android:src="@drawable/flecha_volver" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo No Socio"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/tarjetaCentral"
        android:layout_width="match_parent"
        android:layout_height="610dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/borde_redondo_fondo"
        android:clipToOutline="true"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Label para el campo de Nombre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="Nombre:"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Campo de Nombre -->
        <EditText
            android:id="@+id/title_inputNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Juan"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#666666" />

        <!-- Label para el campo de Apellido -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="Apellido:"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Campo de Apellido -->
        <EditText
            android:id="@+id/title_inputApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Perez"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#666666" />

        <!-- Label para el campo de DNI -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="DNI:"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Campo de DNI -->
        <EditText
            android:id="@+id/title_inputDNI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="11111111"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#666666" />

        <!-- Label para el campo de Teléfono -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="Teléfono:"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Campo de Teléfono -->
        <EditText
            android:id="@+id/title_inputTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="123456789"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#666666" />

        <!-- Label para el campo de Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="Email (correo):"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Campo de Email -->
        <EditText
            android:id="@+id/title_inputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="hola@correo.com"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#666666" />

        <!-- Label para el campo de Direccion -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="Dirección:"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Campo de Direccion -->
        <EditText
            android:id="@+id/title_inputDir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Calle falsa 123"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#666666" />

        <!-- Contenedor para los botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <!-- Botón Cancelar -->
            <Button
                android:id="@+id/btnAptoFisico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/botonmenudarker"
                android:text="Apto Fisico"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null" />

            <!-- Botón Guardar -->
            <Button
                android:id="@+id/btnGuardarNSocio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/botonmenu"
                android:text="Guardar"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
