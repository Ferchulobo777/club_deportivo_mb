<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1B41"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="@string/usuario"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="Editar Cliente"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- PASO 1: Envolver la tarjeta en un ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/tarjetaCentral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/borde_redondo_fondo"
            android:clipToOutline="true"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Label para el campo de Nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp"
                android:text="Nombre:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Campo de Nombre -->
            <EditText
                android:id="@+id/title_inputNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:hint="Juan"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#666666" />

            <!-- Label para el campo de Apellido -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:text="Apellido:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Campo de Apellido -->
            <EditText
                android:id="@+id/title_inputApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:hint="Perez"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#666666" />

            <!-- Label para el campo de DNI -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:text="DNI:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Campo de DNI -->
            <EditText
                android:id="@+id/title_inputDNI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:hint="11111111"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#666666" />

            <!-- Label para el campo de Teléfono -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:text="Teléfono:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Campo de Teléfono -->
            <EditText
                android:id="@+id/title_inputTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:hint="123456789"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#666666" />

            <!-- Label para el campo de Email -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:text="Email (correo):"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Campo de Email -->
            <EditText
                android:id="@+id/title_inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:hint="hola@correo.com"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#666666" />

            <!-- Label para el campo de Direccion -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:text="Dirección:"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Campo de Direccion -->
            <EditText
                android:id="@+id/title_inputDir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:hint="Calle falsa 123"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#666666" />

            <!-- Contenedor para los botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <!-- Botón Apto Fisico -->
                <Button
                    android:id="@+id/btnAptoFisico"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/botonmenudarker"
                    android:text="Apto Fisico"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@null" />

                <!-- Botón Guardar -->
                <Button
                    android:id="@+id/btnGuardarE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/botonmenu"
                    android:text="Guardar"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@null" />

            </LinearLayout>

            <!-- PASO 2: Añadir el nuevo botón de Eliminar -->
            <Button
                android:id="@+id/btnEliminarCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/botonmenudarker"
                android:text="Eliminar Cliente"
                android:textColor="#FF5252"
                android:textStyle="bold"
                app:backgroundTint="@null" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
