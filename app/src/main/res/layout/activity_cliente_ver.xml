<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1D1B41">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:clipToOutline="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fondo_redondo_avatar"
            android:clipToOutline="true"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/usuario"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Volver"
            android:src="@drawable/flecha_volver" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Cliente"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/tarjetaCentral"
        android:layout_width="match_parent"
        android:layout_height="610dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/borde_redondo_fondo"
        android:clipToOutline="true"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Label para el campo de Nombre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="Nombre:"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Campo de Nombre -->
        <TextView
            android:id="@+id/title_textNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Juan"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="12dp"
            android:textColor="#FFFFFF" />

        <!-- Label para el campo de Apellido -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="Apellido:"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Campo de Apellido -->
        <TextView
            android:id="@+id/title_textApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perez"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="12dp"
            android:textColor="#FFFFFF" />

        <!-- Label para el campo de DNI -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="DNI:"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Campo de DNI -->
        <TextView
            android:id="@+id/title_textDNI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11111111"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="12dp"
            android:textColor="#FFFFFF" />


        <!-- Label para el campo de Telefono -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="Telefono:"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Campo de Telefono -->
        <TextView
            android:id="@+id/title_textTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11111111"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="12dp"
            android:textColor="#FFFFFF" />

        <!-- Label para el campo de Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="Email (correo):"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Campo de Email -->
        <TextView
            android:id="@+id/title_textCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hola@correo.com"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="12dp"
            android:textColor="#FFFFFF" />

        <!-- Label para el campo de Direccion -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="Direccion:"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- Campo de Email -->
        <TextView
            android:id="@+id/title_textDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calle falsa 123"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="12dp"
            android:textColor="#FFFFFF" />

        <!-- Contenedor para los botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <!-- Botón Cancelar -->
            <Button
                android:id="@+id/btnAptoFisico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/botonmenudarker"
                android:text="Apto Fisico"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"/>

            <!-- Botón Editar -->
            <Button
                android:id="@+id/btnEditar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/botonmenu"
                android:text="Editar"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
