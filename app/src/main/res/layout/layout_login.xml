<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1D1B41">



    <!-- Imagen portada -->
    <ImageView
        android:id="@+id/title_imageView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/portada" />

    <!-- Contenedor formulario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Títulos -->
        <TextView
            android:id="@+id/title_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/title_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicia sesión con tu usuario"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <!-- Campo usuario -->
        <EditText
            android:id="@+id/title_inputUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Usuario"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:background="@drawable/edit_text_bg"
            android:drawableStart="@android:drawable/ic_menu_myplaces"
            android:padding="12dp"/>

        <!-- Campo contraseña -->
        <EditText
            android:id="@+id/title_inputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:background="@drawable/edit_text_bg"
            android:drawableStart="@android:drawable/ic_lock_lock"
            android:padding="12dp"/>

        <!-- Botón ingresar -->
        <Button
            android:id="@+id/title_btnIngresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="INGRESAR"
            android:backgroundTint="#605CA8"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>

        <!-- Texto registro -->
        <TextView
            android:id="@+id/title_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="¿No tienes cuenta? Regístrate"
            android:textColor="#AAAAFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            />



    </LinearLayout>

</LinearLayout>
