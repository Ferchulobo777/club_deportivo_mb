<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1D1B41"
    tools:context=".InformacionActividadActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:clipToOutline="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fondo_redondo_avatar"
            android:clipToOutline="true"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/usuario"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Volver"
            android:src="@drawable/flecha_volver" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Información de la Actividad"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/tarjetaCentral"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/borde_redondo_fondo"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:clipToOutline="true"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp">

        <EditText
            android:id="@+id/etNombreTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Nombre:" />

        <EditText
            android:id="@+id/etNombreActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:background="@drawable/edittext"
            android:padding="12dp"
            android:enabled="false"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etDescripcionActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripcion"
            android:inputType="textPersonName"
            android:background="@drawable/edittext"
            android:padding="12dp"
            android:enabled="false"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etDiaActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dia"
            android:inputType="textPersonName"
            android:background="@drawable/edittext"
            android:padding="12dp"
            android:enabled="false"
            android:layout_marginBottom="12dp" />

        <Spinner
            android:id="@+id/spnProfesor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:background="@drawable/spinner"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etHoraActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora"
            android:inputType="textPersonName"
            android:background="@drawable/edittext"
            android:padding="12dp"
            android:enabled="false"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etCupoActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cupo Máximo"
            android:inputType="textPersonName"
            android:background="@drawable/edittext"
            android:padding="12dp"
            android:enabled="false"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/btnContenedor"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/borde_redondo_fondo"
            android:clipToOutline="true"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <Button
                android:id="@+id/btnEliminarActividad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/botonmenu"
                android:gravity="center"
                android:padding="12dp"
                android:text="Eliminar"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:backgroundTint="@null"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnEditarActividad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/botonmenu"
                android:gravity="center"
                android:padding="12dp"
                android:text="Editar"
                android:textColor="#0F0E20"
                android:textSize="16sp"
                app:backgroundTint="#5EC8D4"
                android:layout_marginStart="8dp"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/necesitas_ayuda"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
