<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1D1B41">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Ãcono de usuario -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="Usuario"
            android:gravity="center_vertical"
            android:src="@drawable/soccer_ball" />

        <!-- usuario -->
        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="200dp"
            android:text="@string/usuario"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Flecha -->
        <ImageButton
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Volver"
            android:src="@drawable/flecha_volver" />

    </LinearLayout>



    <TextView
        android:id="@+id/tvPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ingresa el nombre completo o DNI del personal que deseas buscar"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/tarjetaCentral"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/borde_redondo_fondo"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:clipToOutline="true"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp">

        <!-- edit nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:hint="Nombre completo o DNI"
            android:inputType="textPersonName"
            android:background="@drawable/edittext"
            android:padding="12dp"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="12dp" />

        <!-- buscar personal -->
        <Button
            app:backgroundTint="@null"
            android:id="@+id/boton_buscarp"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botonmenu"
            android:gravity="center"
            android:padding="12dp"
            android:text="Buscar personal"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />



    </LinearLayout>

    <TextView
        android:id="@+id/tvAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/necesitas_ayuda"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
